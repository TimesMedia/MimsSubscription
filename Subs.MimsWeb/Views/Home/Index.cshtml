@{
    ViewBag.Title = "Mims";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <link rel="stylesheet" href="/Content/Styles.css">
    <link rel="stylesheet" href="~/Content/normalize.css">
    <link rel="stylesheet" href="~/Content/navbar.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap" rel="stylesheet">



    <title>@ViewBag.Title</title>
    <style>

        * {
            box-sizing: border-box;
        }

        @@media (max-width: 480px) {
            #narrow {
                display: block
            }

            #wide {
                display: none;
            }
        }

        @@media (min-width: 480px) {

            #narrow {
                display: none;
            }

            #wide {
                display: block;
            }
        }

        .Welcome {
            background-color: lightcyan;
        }

            .Welcome img {
                max-width: 100%;
            }


        .picfix {
            width: 150px;
            height: 160px;
           margin:0;
        }

        body {
            padding-top: 9px;
            padding-bottom: 9px;
        }

        img {
            vertical-align: middle;
            border-style: none
        }
    </style>
</head>
<body>

    <div class="Welcome">
        <img id="wide" src="~/Images/WelcomeWide.jpg" />
        <img id="narrow" src="~/Images/WelcomeNarrow.gif" />
    </div>

    <div class="container" style="align-content:center;  ">

        <div class="row">

            <div class="col-12 col-md-3" style="text-align:center">

                <div class="p-3">
                   <div class="img"> <a href="~/Promotion/GetProducts"><img src="~/Images/IVS Vol61 No2 - 2023.jpg" class="picfix"></a></div>
                </div>
            </div>

            <div class="col-12 col-md-3" style="text-align:center">

                <div class="p-3">
                    <a href="~/Promotion/GetProducts"><img src="~/Images/Mims July 2023.jpg" class="picfix"></a>
                </div>
            </div>
            <div class="col-12 col-md-3" style="text-align:center">

                <div class="p-3">
                    <a href="~/Promotion/GetProducts"><img src="~/Images/Generic Dictionary June 2023.jpg" class="picfix"></a>
                </div>
            </div>
            <div class="col-12 col-md-3" style="text-align:center">

                <div class="p-3">
                    <a href="~/Promotion/GetProducts"><img src="~/Images/CVS Dictionary 2023.jpg" class="picfix"></a>
                </div>
            </div>
            @*<div class="col-12 col-md-3" style="text-align:center">

                    <div class="p-3">
                        <a href="~/Promotion/GetProducts"><img src="~/Images/mdr 2022.jpg" class="picfix"></a>
                    </div>
                </div>*@



        </div>
    </div>



   
</body>
</html>


