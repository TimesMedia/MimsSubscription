
@{
    ViewBag.Title = "Welcome";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/normalise.css">
    <link rel="stylesheet" href="/Content/Styles.css">
    <title>Welcome</title>

    <style>
        p {
            padding: 1em 1em 1em 1em;
            font-family: Arial;
            font-size: large;
            font-weight: 600;
            color: blue;
        }
    </style>
    <style>

        * {
            box-sizing: border-box;
        }

        @@media (max-width: 480px) {
            #narrow {
                display: block
            }

            #wide {
                display: none;
            }
        }

        @@media (min-width: 480px) {

            #narrow {
                display: none;
            }

            #wide {
                display: block;
            }
        }

        .Welcome {
            background-color: lightcyan;
        }

            .Welcome img {
                max-width: 100%;
            }


        .picfix {
            width: 190px;
            height: 190px;
            padding-bottom: 0;
        }

        body {
            padding-top: 10px;
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
    <p>
        @Html.ViewBag.Message
    </p>


    <div class="Welcome">
        <img id="wide" src="~/Images/WelcomeWide.jpg" />
        <img id="narrow" src="~/Images/WelcomeNarrow.gif" />
    </div>


