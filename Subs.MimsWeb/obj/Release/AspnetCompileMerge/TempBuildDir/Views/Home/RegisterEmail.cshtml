@model Subs.MimsWeb.Models.LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Mims Account SignUp</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Content/SignUp.css">

</head>
<body>



    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    @using (Html.BeginForm())
                    {
                        <p style="margin:2em 0em 2em 1em; color:red;font-family:Arial;">
                            @Html.ViewBag.Message
                        </p>

                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="name" id="name" placeholder="Your Name" required />
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            @Html.EditorFor(x => x.Email)
                        </div>



                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="myButton" value="Register" />
                        </div>
                    }
                </div>
                <div class="signup-image">
                    <figure><img src="~/Images/Mims.jpg" alt="sing up image"></figure>
                    <a href="~/Home/Login" class="signup-image-link">I am already member?</a>
                </div>
            </div>
            <div style="text-align:center;text-size-adjust:100%">
                <br />
                <img src="~/Images/Ascendis Banner2 narrow.jpg" width="200" />
            </div>
        </div>
    </section>





    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
    <!-- Main JS-->
    <script>
        $(".name").focus(function () {
            $(".name-help").slideDown(500);
        }).blur(function () {
            $(".name-help").slideUp(500);
        });

        $(".email").focus(function () {
            $(".email-help").slideDown(500);
        }).blur(function () {
            $(".email-help").slideUp(500);
        });
    </script>

</body>
</html>



