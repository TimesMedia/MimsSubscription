<style>
    body {
        padding: 20px;
        font-family: 'Roboto', sans-serif;
        background-color: #F5F5F5;
    }
    /*Sign In Form*/
    .signin {
        position: relative;
        height: 650px;
        width: 500px;
        margin: auto;
        box-shadow: 0px 30px 125px -5px #000;
    }
    /*Background Img*/
    .back-img {
        position: relative;
        width: 100%;
        height: 170px;
        background: url('https://www.omnihotels.com/-/media/images/hotels/nycber/destinations/nyc-aerial-skyline.jpg?h=660&la=en&w=1170')no-repeat center center;
        background-size: cover;
    }

    .layer {
        background-color: rgba(33,150,243,0.5);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .active {
        padding-left: 25px;
        color: #fff;
    }

    .nonactive {
        color: rgba(255, 255, 255, 0.6);
    }

    .sign-in-text {
        top: 135px;
        position: absolute;
        z-index: 1;
    }

    h2 {
        padding-left: 15px;
        font-size: 25px;
        text-transform: uppercase;
        display: inline-block;
        font-weight: 300;
    }

    .point {
        position: absolute;
        z-index: 1;
        color: #0094ff;
        top: 160px;
        padding-left: 50px;
        font-size: 20px;
    }

    /*form-section*/
    .form-section {
        padding: 70px 35px 70px 35px;
    }

    .keep-text {
        font-size: 12px;
        color: #BDBDBD;
    }

    .forgot-text {
        font-size: 10px;
        color: #BDBDBD;
        text-align: right;
    }
    /*sign-in-btn*/
    .sign-in-btn {
        width: 100%;
        height: 75px;
        position: absolute;
        bottom: 0;
        border-radius: 0px;
        background-color: rgba(63, 78, 191, 1);
    }
</style>
</head>
<body >
    <div class="signin">
        <div class="back-img">
            <div class="sign-in-text">
                <h2 class="active">Sign Up</h2>
            </div><!--/.sign-in-text-->
            <div class="layer">
            </div><!--/.layer-->
            <p class="point">&#9650;</p>
        </div><!--/.back-img-->
        <div class="form-section">

            <div class="col-12">

                @using (Html.BeginForm())
                {

                    <p style="margin:1em 0em 0em 1em; color:red;font-family:Arial;">
                        @Html.ViewBag.Message
                    </p>

                    <div class="form-group col-12">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i>Please enter your name</label><br /><br />&nbsp;&nbsp;
                        <input type="text" name="name" id="name" required />
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(x => x.Email)<br /><br />&nbsp;
                        @Html.EditorFor(x => x.Email)
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="myButton" value="Register" />
                    </div>
                    

                    <a href="~/Home/Login" class="signup-image-link">Already a member?</a>
                }
            </div>
        </div>
    </div>

